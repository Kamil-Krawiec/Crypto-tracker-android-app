<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Form to add new asset -->
    <EditText
        android:id="@+id/etSymbol"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Symbol (e.g. BTC)"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/etQuantity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Quantity"
        android:inputType="numberDecimal"
        app:layout_constraintTop_toBottomOf="@id/etSymbol"
        app:layout_constraintStart_toStartOf="@id/etSymbol"
        app:layout_constraintEnd_toEndOf="@id/etSymbol"
        android:layout_marginTop="8dp"/>

    <EditText
        android:id="@+id/etPurchasePrice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Purchase Price"
        android:inputType="numberDecimal"
        app:layout_constraintTop_toBottomOf="@id/etQuantity"
        app:layout_constraintStart_toStartOf="@id/etQuantity"
        app:layout_constraintEnd_toEndOf="@id/etQuantity"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/btnAddAsset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Asset"
        app:layout_constraintTop_toBottomOf="@id/etPurchasePrice"
        app:layout_constraintEnd_toEndOf="@id/etPurchasePrice"
        android:layout_marginTop="12dp"/>

    <!-- Divider -->
    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintTop_toBottomOf="@id/btnAddAsset"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- RecyclerView of existing assets -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvAssets"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@+id/btnAddAsset"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>